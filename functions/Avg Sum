import java.util.*;

public class Main {
    public static double calculateAvg(int n, Scanner sc) {
        double sum = 0;

        System.out.println("Enter " + n + " numbers:");

        for (int i = 0; i < n; i++) {
            sum += sc.nextDouble();   // safer
        }

        return sum / n;
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int n = 5;
        double result = calculateAvg(n, sc);

        System.out.println("Average is: " + result);

       
    }
}
